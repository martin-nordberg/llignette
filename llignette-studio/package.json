{
	"name": "llignette-studio",
	"version": "0.1.0",
	"description": "Client side component for the Llignette programming experience.",
	"type": "module",
	"author": "Martin E. Nordberg III",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",

		"build-bulma": "sass --load-path=node_modules src/css/lignette-studio.scss css/lignette-studio.css",
		"start-bulma": "npm run build-bulma -- --watch"
	},
	"dependencies": {
		"@trpc/client": "^11.0.0-rc.608",
		"superjson": "^2.2.1",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.8.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"bulma": "^1.0.2",
		"eslint": "^9.14.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"sass": "^1.80.6",
		"svelte": "^5.1.14",
		"svelte-check": "^4.0.6",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0",
		"vite": "^5.4.11",
		"vitest": "^2.1.4"
	}
}
