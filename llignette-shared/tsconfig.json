  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "$shared/*": ["../llignette-shared/src/*"]
    }
  },
  "include": ["src", "vitest"],
  "exclude": ["node_modules"]
}
